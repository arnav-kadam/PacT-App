<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register_background"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".BusContactTracer">

    <androidx.cardview.widget.CardView
        android:layout_width="370dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        app:cardCornerRadius="20dp"
        android:layout_height="150dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/custom_cardview_1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/editTextTextPersonName"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:fontFamily="@font/amaranth"
                    android:inputType="textPersonName"
                    android:text="Please enter student id:"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/idEditText"
                    android:layout_width="90dp"
                    android:layout_height="27dp"
                    android:fontFamily="@font/amaranth"
                    android:background="@drawable/cool_login_edit_texts"
                    android:layout_marginLeft="10dp"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:gravity="center_horizontal" />

            </LinearLayout>


            <Button
                android:id="@+id/submitButton"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/amaranth"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_buttons"
                android:text="Submit"
                android:layout_gravity="center_horizontal"
                android:textColor="#020202"
                android:textSize="18sp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <ListView
        android:id="@+id/listView"
        android:layout_width="370dp"
        android:layout_height="270dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:visibility="invisible" />

    <androidx.cardview.widget.CardView
        android:id="@+id/contactTraceCardView"
        android:visibility="invisible"
        android:layout_width="370dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        app:cardCornerRadius="20dp"
        android:layout_height="160dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/custom_cardview_1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/messageTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="If this is the correct student, please click contact trace!"
                android:fontFamily="@font/amaranth"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:textAlignment="center"
                android:textSize="23sp"
                android:visibility="visible"
                android:gravity="center_horizontal" />

            <Button
                android:id="@+id/contactTraceButton"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:visibility="visible"
                android:fontFamily="@font/amaranth"
                android:background="@drawable/rounded_buttons"
                android:text="Contact Trace"
                android:layout_gravity="center_horizontal"
                android:textColor="#040303"
                android:textSize="18sp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:id="@+id/profileImageView"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:src="@drawable/profile" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_marginLeft="110dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/homeImageView"
            android:src="@drawable/home" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:id="@+id/logoutImageView"
            android:src="@drawable/logout" />

    </LinearLayout>


</LinearLayout>