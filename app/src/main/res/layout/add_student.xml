<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register_background"
    android:orientation="vertical"
    tools:context=".InputInfo">

    <androidx.cardview.widget.CardView
        android:layout_width="380dp"
        android:layout_height="340dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="20dp"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/custom_cardview_1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/amaranth"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:text="Add general/bus info"
                android:textSize="27sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/nameEditText"
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center_horizontal"
                android:ems="10"
                android:paddingLeft="10dp"
                android:background="@drawable/round_edit_text"
                android:hint=" Name (ex. James Warden)"
                android:fontFamily="@font/amaranth"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/gradeEditText"
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/round_edit_text"
                android:layout_marginTop="15dp"
                android:ems="10"
                android:paddingLeft="10dp"
                android:hint=" Grade (ex. 11)"
                android:fontFamily="@font/amaranth"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/busNumberEditText"
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/round_edit_text"
                android:layout_marginTop="15dp"
                android:ems="10"
                android:paddingLeft="10dp"
                android:hint=" Bus Number (ex. 11)"
                android:fontFamily="@font/amaranth"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/seatNumberEditText"
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/round_edit_text"
                android:layout_marginTop="15dp"
                android:ems="10"
                android:paddingLeft="10dp"
                android:hint=" Seat Number (ex. 7)"
                android:fontFamily="@font/amaranth"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/idEditText"
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/round_edit_text"
                android:layout_marginTop="15dp"
                android:ems="10"
                android:paddingLeft="10dp"
                android:hint=" Student id"
                android:fontFamily="@font/amaranth"
                android:inputType="textPersonName" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="380dp"
        android:layout_height="280dp"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/custom_cardview_1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/amaranth"
                android:layout_gravity="center_horizontal"
                android:text="Add class info (Room numbers)"
                android:layout_marginTop="10dp"
                android:textSize="25sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/class1"
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center_horizontal"
                    android:ems="10"
                    android:paddingLeft="10dp"
                    android:background="@drawable/round_edit_text"
                    android:hint=" Class 1"
                    android:fontFamily="@font/amaranth"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/class2"
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_horizontal"
                    android:ems="10"
                    android:paddingLeft="10dp"
                    android:background="@drawable/round_edit_text"
                    android:hint=" Class 2"
                    android:fontFamily="@font/amaranth"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/class3"
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_horizontal"
                    android:ems="10"
                    android:paddingLeft="10dp"
                    android:background="@drawable/round_edit_text"
                    android:hint=" Class 3"
                    android:fontFamily="@font/amaranth"
                    android:inputType="textPersonName" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/class4"
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center_horizontal"
                    android:ems="10"
                    android:paddingLeft="10dp"
                    android:background="@drawable/round_edit_text"
                    android:hint=" Class 4"
                    android:fontFamily="@font/amaranth"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/class5"
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_horizontal"
                    android:ems="10"
                    android:paddingLeft="10dp"
                    android:background="@drawable/round_edit_text"
                    android:hint=" Class 5"
                    android:fontFamily="@font/amaranth"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/class6"
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_horizontal"
                    android:ems="10"
                    android:paddingLeft="10dp"
                    android:background="@drawable/round_edit_text"
                    android:hint=" Class 6"
                    android:fontFamily="@font/amaranth"
                    android:inputType="textPersonName" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/class7"
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center_horizontal"
                    android:ems="10"
                    android:paddingLeft="10dp"
                    android:background="@drawable/round_edit_text"
                    android:hint=" Class 7"
                    android:fontFamily="@font/amaranth"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/class8"
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_horizontal"
                    android:ems="10"
                    android:paddingLeft="10dp"
                    android:background="@drawable/round_edit_text"
                    android:hint=" Class 8"
                    android:fontFamily="@font/amaranth"
                    android:inputType="textPersonName" />

            </LinearLayout>

            <Button
                android:id="@+id/submitButton"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/rounded_buttons"
                android:text="Add student"
                android:fontFamily="@font/amaranth"
                android:textColor="#090909"
                android:textSize="18sp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:id="@+id/profileImageView"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:src="@drawable/profile" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_marginLeft="120dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/homeImageView"
            android:src="@drawable/home" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="115dp"
            android:id="@+id/logoutImageView"
            android:src="@drawable/logout" />

    </LinearLayout>

</LinearLayout>