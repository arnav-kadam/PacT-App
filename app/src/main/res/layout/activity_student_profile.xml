<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    tools:context=".AdminProfile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:background="#EFE7A3">

        <TextView
            android:id="@+id/studentTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/amaranth"
            android:textSize="30sp"
            android:text="Name of person"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="27sp"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/amaranth"
                android:text="Type: Student"/>

            <Button
                android:id="@+id/backHomeButton"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:background="@drawable/profile_button"
                android:drawableLeft="@drawable/ic_action_name"
                android:paddingLeft="10dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/amaranth"
                android:text="Back to home"
                android:textSize="20sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="552dp"
        android:background="#ADBCBC"
        android:orientation="vertical">

        <TextView
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/amaranth"
            android:layout_marginTop="40dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/box_edit_text"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Name"
            android:textStyle="bold"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="360dp"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:fontFamily="@font/amaranth"
            android:background="@drawable/round_edit_text"
            android:text="Arnav Kadam" />

        <TextView
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/amaranth"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/box_edit_text"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Email"
            android:textStyle="bold"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/emailTextView"
            android:layout_width="360dp"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_gravity="center_horizontal"
            android:paddingTop="5dp"
            android:fontFamily="@font/amaranth"
            android:background="@drawable/round_edit_text"
            android:text="arnav.d.kadam@gmail.com" />

        <TextView
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/amaranth"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/box_edit_text"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Grade"
            android:textStyle="bold"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/gradeTextView"
            android:layout_width="360dp"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:fontFamily="@font/amaranth"
            android:background="@drawable/round_edit_text"
            android:text="11" />

        <TextView
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/amaranth"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/box_edit_text"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Bus number"
            android:textStyle="bold"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/busNumberTextView"
            android:layout_width="360dp"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:fontFamily="@font/amaranth"
            android:background="@drawable/round_edit_text"
            android:text="2" />

        <TextView
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/amaranth"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/box_edit_text"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Seat number"
            android:textStyle="bold"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/seatNumberTextView"
            android:layout_width="360dp"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:fontFamily="@font/amaranth"
            android:background="@drawable/round_edit_text"
            android:text="7" />



    </LinearLayout>

</LinearLayout>